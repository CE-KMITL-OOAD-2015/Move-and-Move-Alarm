<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fatel.mamtv1.JoinGroupActivity">
    <!--android:background="@drawable/blankbg"-->

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/codegroup"
            android:text="Group Code : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/edit_message"
            android:layout_weight="5"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Code"
            android:inputType="number"
            android:maxLength="4"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_below="@id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <Button
            android:id="@+id/crtbtn"
            android:layout_centerHorizontal="true"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/joingroup"
            android:onClick="joinGroup"
            />

    </LinearLayout>


</RelativeLayout>
