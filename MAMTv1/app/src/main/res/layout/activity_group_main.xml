<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fatel.mamtv1.GroupMainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">
        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:stretchColumns="*" >


            <!-- display this button in 3rd column via layout_column(zero based) -->

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#FF8C00" >

                <TextView
                    android:id="@+id/textView21"
                    android:text="Group Code : "
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View style="@style/Divider" />
                </LinearLayout>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/textView22"
                        android:text="-"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:textColor="#ffffff"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#FFA500" >

                <TextView
                    android:id="@+id/textView31"
                    android:text="Group Name : "
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>


                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <View style="@style/Divider" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView32"
                    android:text="-"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>



            </TableRow>


            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF8C00" >

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Admin :  "
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>


                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View style="@style/Divider" />
                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:id="@+id/textView42"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:text="-"
                    />



            </TableRow>



            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFA500" >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Score :  "
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>


                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent" >

                    <View style="@style/Divider" />
                </LinearLayout>

                <TextView
                    android:id="@+id/score"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:layout_column="2" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF8C00" >


                <TextView

                    android:id="@+id/Event"
                    android:text="Event time : "
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"/>



                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent" >

                    <View style="@style/Divider" />
                </LinearLayout>

                <TextView
                    android:id="@+id/getEvent"
                    android:text="-"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>


        </TableLayout>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/mem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff8c00"
        android:text="Member : "
        android:layout_below="@id/relativeLayout"/>



    <TextView
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/mem"
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff8c00"
        android:text="0"/>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/slash"
        android:layout_toRightOf="@id/amount"
        android:layout_below="@id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff8c00"
        android:text=" / "/>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/all"
        android:layout_toRightOf="@id/slash"
        android:layout_below="@id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff8c00"
        android:text="10"/>


    <Button
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/all"
        android:layout_below="@id/relativeLayout"
        android:layout_width="85dp"
        android:layout_height="25dp"

        android:background="@drawable/selectormem"
        android:onClick="linkMember"
         />

</RelativeLayout>
